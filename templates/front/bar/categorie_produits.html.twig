{% block title %}Bar{% endblock %}

{% block body %}
<h5 class="titre1">Carte du bar</h5>
<div class="card-marge">
  {% for categorie in categories %}


  <a href="{{ path('details_categorie',{'id': bar.id, 'categorieId': categorie.id})}}" type="button"
